{
  "manifest_version": 3,
  "name": "Website QR Code",
  "version": "1.0.0",
  "description": "Generate QR codes for any webpage with a beautiful floating button. Features website logo overlay and dark mode support.",
  "icons": {
    "128": "icon.svg"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://api.qrserver.com/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/website-qr-code",
  "minimum_chrome_version": "88"
} 